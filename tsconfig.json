{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@app": ["./src/app"],
      "@common/*": ["./src/common/*"],
      "@di/*": ["./src/di/*"],
      "@http/*": ["./src/http/*"],
      "@utilities/*": ["./src/utilities/*"]
    }
  },
  "include": ["src/**/*"]
}
